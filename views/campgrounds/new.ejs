<%layout('./layout/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" novalidate class="validate-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" class="form-control" name="campground[title]" id="tile" placeholder="Enter the name of the campground" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="campground[location]" id="location"
                placeholder="Enter the location details City, State" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- <input type="file" name="image" id="" multiple> -->
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image Url</label>
                <input type="text" class="form-control" name="campground[image]" id="image"
                placeholder="Enter the campground image url" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
            <div class="mb-3">
                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" name="campground[price]" id="price"
                    placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="campground[description]" class="form-control" id="description" cols="30" rows="5" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3 custom-file">
                <label for="image" class="form-label">
                    Image(s)
                </label>
                <input class="form-control" type="file" id="image" name="image" multiple>
              </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
    
        <button class="btn btn-danger"><a href="/campgrounds" style="text-decoration: none; color: white;">Cancel</a></button>
    </div>
</div>